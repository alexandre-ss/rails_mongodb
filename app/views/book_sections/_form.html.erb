<div class="d-flex align-items-center">
  <div class="container text-center">
    <div class='row'>
      <div class="col-md-9 col-lg-6 mx-auto">
        <div class = "card card-form my-5">
          <div class = "card-body">
            <%= form_with(model: book_section) do |form| %>
              <div class="form-group">
                <%= form.text_field :title, class: "form-control mb-2", placeholder: "Título do gênero" %>
              </div>

              <div class="form-group">
                <%= form.number_field :max_quantity, class: "form-control mb-2", placeholder: "quantidade máxima" %>
              </div>

              <div class="form-group">
                <%= form.number_field :books_quantity, class: "form-control", placeholder: "quantidade atual de livros" %>
              </div>

              <hr class="my-4">
              <div class="actions mb-2">
                <%= form.submit "Submeter", class: 'btn btn-success' %>
              </div>
            <% end %>
              <div class='text-center'>
                <%= link_to 'Voltar', book_sections_path, class: "btn btn-danger" %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
